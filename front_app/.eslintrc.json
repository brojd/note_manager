{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "installedESLint": true,
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1, "VariableDeclarator": 1 }],
    "linebreak-style": 0,
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": 0,
    "react/no-find-dom-node": 0
  },
  "globals": {
    "module": true,
    "scheduler": true,
    "global": true,
    "jest": true,
    "test": true,
    "expect": true
  }
}
